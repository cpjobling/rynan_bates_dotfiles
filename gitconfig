[color]
	diff = auto
	status = auto
	branch = auto
[core]
	excludesfile = ~/.gitignore
	editor = code -w
	autocrlf = input
	pager = less -+$LESS -RSF
[apply]
	whitespace = nowarn
[format]
	pretty = %C(yellow)%h%Creset %s %C(red)(%an, %cr)%Creset
[push]
	default = simple
[merge "theirs"]
	driver = true
[merge "ours"]
	driver = true
[pull]
	rebase = false
[pager]
	branch = false
[init]
	defaultBranch = main
